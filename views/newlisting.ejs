<!DOCTYPE html>
<html>
  <head>
    <title><%= title %> New Listing Page </title>
    <title><%= title %></title>
    <%- include('./partials/head') %>
    <link rel='stylesheet' href='/css/newlistings.css'/>
    
  </head>
  <body>
    <%- include('./partials/navbar.ejs')  %>

    <form class="container">
      <div class="form-group">
        <label for="formGroupExampleInput">City</label>
        <input type="text" class="form-control" id="city" placeholder="string">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput">State</label>
        <input type="text" class="form-control" id="state" placeholder="string">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput">Address</label>
        <input type="text" class="form-control" id="address" placeholder="string">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Zip Code</label>
        <input type="text" class="form-control" id="zipcode" placeholder="string">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput3">Price</label>
        <input type="text" class="form-control" id="price" placeholder="integer (no commas)">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput4">Bedrooms</label>
        <input type="text" class="form-control" id="bedrooms" placeholder="number">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput4">Bathrooms</label>
        <input type="text" class="form-control" id="bathrooms" placeholder="number">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput4">Duration</label>
        <input type="text" class="form-control" id="duration" placeholder="number">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput4">Pets</label>
        <input type="text" class="form-control" id="pets" placeholder="true / false">
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput4">Furnished</label>
        <input type="text" class="form-control" id="furnished" placeholder="true / false">
      </div>
      <input type="hidden" id="imageurl" name="imageurl" value="/images/default.png">
      <button type="button" class="btn btn-primary" id="submitListing">AJAX it in there</button>
    </form>
    <input type="file" id="file-input">
      <p id="status">Please select a file</p>
      <img id="preview" src="/images/default.png">
    <script rel='javascript' src='/js/newlisting.js'></script>
  </body>
</html>
