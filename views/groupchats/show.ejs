<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('../partials/head') %>
    <script rel='javascript' src='/js/messages.js'></script>
    <link rel="stylesheet" href="/css/groupchat.css">
  </head>
  <body>
    <%- include('../partials/navbar.ejs')  %>
    <h1><%= title %></h1>

    <span id="<%= user.name %>"></span>
    <ul id="messages"></ul>
    <form id="form" action="" class="container">
      <input id="m" autocomplete="off" /><button>Send</button>
    </form>

    <div class="modal fade" id="enterPassword">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <p>Enter this chatroom's password</p>
          </div><!-- modal-header -->
          <div class="modal-body">
            <input type="text" class="form-control" id="passwordAttempt" placeholder="Chatroom Password">
          </div><!-- modal-body -->
          <div class="modal-footer">
            <button id="enterChatroom" type="button" class="btn btn-primary" data-dismiss="modal">Enter Chatroom</button>
          </div><!-- modal-footer -->
        </div><!-- modal-content -->
      </div><!-- modal-dialog -->
    </div><!-- modal fade -->

  <script>
    $(function() {
      $('#enterPassword').modal('show');
    })
  </script>
  </body>
</html>
